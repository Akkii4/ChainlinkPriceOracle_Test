contract Edge196OracleTest {
    
    AggregatorV3Interface internal priceFeed;
    using SafeMath for uint256;

    struct FetchedData{
        uint256 index;
        uint256 fetchedAt;
        uint256 fetchedPrice;
    }
    
    event DataFetched(uint256 entryIndex, address indexed fetchedBy, uint256 indexed priceFetched);
    event DataDeleted(uint256 deletedIndex);
    
    FetchedData[] private fetchedData;

    constructor(){   
        //(ETH-USD) Kovan Chainlink Price Oracle
        priceFeed = AggregatorV3Interface(0x9326BFA02ADD2366b30bacB125260Af641031331);
    }
    

    function fetchLatestPrice() public {
        (,int price,uint256 timestamp,,) = priceFeed.latestRoundData();
        uint256 priceFetched = uint256(price);
        uint256 entryPosition = fetchedData.length;
        
        fetchedData.push(FetchedData({
            index : entryPosition,
            fetchedAt: timestamp,
            fetchedPrice: priceFetched
        }));
        
        emit DataFetched(entryPosition, msg.sender, priceFetched);
    }
    

    function getData(uint256 position) public view returns(uint256 index,uint256 fetchedAt,uint256 fetchedPrice){
        FetchedData memory data = fetchedData[position]; 
        return (data.index,data.fetchedAt,data.fetchedPrice); 
    }
    

    function deleteData(uint256 index) external {
        FetchedData memory data = fetchedData[index]; 
        require(data.fetchedAt != 0,"Data unavialable at the index");
        delete fetchedData[index];
        emit DataDeleted(index);
    }
    
    function calculateMean(uint256 fromIndex,uint256 toIndex) public view returns(uint256){
        require(toIndex < fetchedData.length && toIndex > fromIndex);

        uint256 fetchePriceSum;
        uint256 numberOfEntries;
        
        for(uint256 i = fromIndex; i <= toIndex; i++){
          FetchedData memory data = fetchedData[i]; 
          if(data.fetchedPrice != 0){
             fetchePriceSum += data.fetchedPrice;
             numberOfEntries += 1;
          }
        }
        
        return fetchePriceSum.mul(1e18).div(numberOfEntries).div(1e18);
    }
    
}
    